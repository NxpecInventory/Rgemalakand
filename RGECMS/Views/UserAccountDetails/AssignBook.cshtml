@model IEnumerable<RGECMS.Models.LibarayIssuedBooks>

@{
    ViewBag.Title = "AssignBook";
}
<style>
    table#example.dataTable thead:hover {
        background-color: #8fa5c7;
    }

    table#example.dataTable tbody tr:hover {
        background-color: #b6b6b8;
    }

        table#example.dataTable tbody tr:hover > .sorting_1 {
            background-color: #b6b6b8;
        }
</style>
<script src="~/Scripts/jquery.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h2>Student Library Issue Books</h2>


<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BookTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AssignedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudedRegId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentDepartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentClass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fineComment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceivedStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Receiveddate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.fineslipid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.finestatus)
                </th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudedRegId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentDepartment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fineComment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Receiveddate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fineslipid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.finestatus)
                </td>

            </tr>
        }

    </table>
</div>
@if (@TempData["cur"] != null)
{
    <div class="alert alert-danger" role="alert">
        <h4 style="color:black;">@TempData["cur"]</h4>
    </div>
}
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" type="stylesheet" />
<link href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" type="stylesheet" />
