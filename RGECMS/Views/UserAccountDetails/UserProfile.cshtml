@model RGECMS.Models.Students
@{
    ViewBag.Title = "UserProfile";
}

<div class="alert alert-primary" role="alert">
    <h3>RGE Student Account Profile Information</h3>
</div>


<div class="container">
    <div class="form-horizontal">

        <hr />

        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayName("Current Semester/Class")
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.CurrentSemclass)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.StudentName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.StudentName)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.GuardianName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.GuardianName)
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Address)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Address)
                    </div>

                </div>
            </div>
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.ContactInfo)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.ContactInfo)
                    </div>

                </div>
            </div>
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Status)
                    </div>

                    <div class="col-md-10">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.Status)
                        </div>

                    </div>
                </div>
                </div>

        <div class="row">
            <div class="form-group col-sm-4">
                <div class="control-label col-sm-4">
                    @Html.DisplayNameFor(model => model.AddmissionDate)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.AddmissionDate)
                    </div>

                </div>
            </div>
            <div class="form-group col-sm-4">
                <div class="control-label col-sm-5">
                    @Html.DisplayNameFor(model => model.Programs.ProgramName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Programs.ProgramName)
                    </div>

                </div>
            </div>
</div>
        </div>

</div>
