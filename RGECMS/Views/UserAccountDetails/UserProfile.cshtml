@model RGECMS.Models.Students
@{
    ViewBag.Title = "UserProfile";
}
<style>
    dt {
        float: left;
        clear: left;
        margin-top: 20px;
        margin-right: 20px;
        margin-left: 20px;
        font-weight: bold;
        width: 180px;
        font-size: 20px;
    }
    img {
        border-radius: 50%;
        /*border:solid;*/
        float: left;
        margin-top: -10px;
        margin-left:-20px;
    }


    dd {
        float: left;
        margin-top: 20px;
        margin-right: 20px;
        font-size: 20px;
        display: block;
    }
        .contanier

