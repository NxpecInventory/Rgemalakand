            </dl>
        </div>
        <div class="contain">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayName("Current Semester/Class")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CurrentSemclass)


                <dt>
                    @Html.DisplayNameFor(model => model.StudentName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StudentName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.GuardianName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GuardianName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>
                </dl>
        </div>
        <div class="contein">
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.ContactInfo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ContactInfo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.AddmissionDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AddmissionDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Programs.ProgramName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Programs.ProgramName)
                </dd>
                </dl>

                
        </div>

    </div>
    </div>
