@model RGECMS.Models.teacherdesignationcategory

@{
    ViewBag.Title = "Edit";
}
<div class="alert alert-info" role="alert">

    <h2 style="color:black;">Edit Teacher Department Record</h2>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <h4 style="color:black;"> Editing Teacher Department</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                @Html.HiddenFor(model => model.Id)

                <div class="form-group col-sm-4">
                    @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-sm" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-sm">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="form-group">
    <a class="btn btn-danger mt-10" href="@Url.Action("Index", "teacherdesignationcategories")">Back to List</a>
</div>
