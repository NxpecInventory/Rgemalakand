@model RGECMS.Models.Registrationcontrolling

@{
    ViewBag.Title = "Edit";
}
<div class="alert alert-success">
    <h4 style="color:black">
        RGE COllege Registration Controlling Action Pannel
    </h4>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="form-horizontal">
            <h4 style="color:black;">Perform Registration Controlling Action</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="row">
                <div class="form-group col-sm">
                    @Html.LabelFor(model => model.regclosingid, "regclosingid", htmlAttributes: new { @class = "control-label col-sm" })
                    <div class="col-md-10">
                        @Html.DropDownList("regclosingid", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.regclosingid, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group col-sm">
                    @Html.LabelFor(model => model.Updationdate, htmlAttributes: new { @class = "control-label col-sm" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Updationdate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Updationdate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-sm">
                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "control-label col-sm" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>




            <div class="row">
                <div class="form-group col-sm">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save Action" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (TempData["alert1"] != null)
{
    <div class="alert alert-danger">
        <h4 style="color:black">
            Warning!Are You Sure You Want To Open New Registrations for new classes or seasons?After Clicking Save You will be
            promoted to the next session and you will be never able to insert any registration record in the previous registration session after saving the whole registrations records will be moved to the registration history
            and the new session of the registartion will start are you sure to proceed click save to proceed.
        </h4>
    </div>
}
@if (TempData["alert2"] != null)
{
    <div class="alert alert-danger">
        <h4 style="color:black">
            Warning!Rehman Group Of Education Registration is Closed are you sure to close the registartions? after closing no registration will be registered into a system
            after closing you can open the registration any time.
        </h4>
    </div>
}
@if (TempData["alert3"] != null)
{
    <div class="alert alert-danger">
        <h4 style="color:black">
            Warning!Rehman Group Of Education Registration is opened registation office will be able to register new registration records
            are you sure to open the registration?click save to proceed.
        </h4>
    </div>
}
<div class="form-group">
    <a class="btn btn-danger mt-10" href="@Url.Action("Index", "Registrationcontrollings")">Back to List</a>
</div>
