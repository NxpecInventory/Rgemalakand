@model IEnumerable<RGECMS.Models.Registrationcontrolling>
<style>
    table#example.dataTable thead:hover {
        background-color: #8fa5c7;
    }

    table#example.dataTable tbody tr:hover {
        background-color: #b6b6b8;
    }

        table#example.dataTable tbody tr:hover > .sorting_1 {
            background-color: #b6b6b8;
        }
</style>
<script src="~/Scripts/jquery.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


@{
    /**/

    ViewBag.Title = "Index";
}

<div class="alert alert-purple">
    <h4 style="color:black">
        RGE College Registration Controlling Pannel,Here you Controls all the Registration process like open,close or temporary stops the
        Registration process.

    </h4>
</div>
@if (TempData["status"] != null)
{
    <div class="alert alert-success">
        <h4 style="color:black">
            @TempData["status"]

        </h4>
    </div>
}

<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Registration Status")
                </th>
                <th>
                    @Html.DisplayName("Registration Comment")
                </th>
                <th>
                    @Html.DisplayName("Registration Updation Date")
                </th>
                <th>Open/Close Registration</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {



            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.regclosingcat.RegOptions)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updationdate)
                </td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "Registrationcontrollings", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>

                </td>
            </tr>

        }

    </table>
</div>
@if (TempData["controlmsg"] != null)
{
    <div class="alert alert-success">
        <h4 style="color:black">
            RGE COllege Registration Status Updated Sucessfully!.

        </h4>
    </div>
}

