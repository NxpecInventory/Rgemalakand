@model RGECMS.Models.Students

@{
    ViewBag.Title = "Details";
}

<div class="alert alert-info" role="alert">
    <h4 style="color:black;">Registered RGE College Student Records.</h4>
    </div>
<div class="container">
    <div class="form-horizontal">
        <h4>Students Registration Details</h4>
        <hr />
        <div class="row">
            <div class="form-group col-sm ">
                <div class="col-md-offset-2 col-md-10 ">
                    <img src="@Url.Content(Model.Uploadimage?? "~/image")" alt="Image" height="150" width="150" class="img-circle img-responsive" />

                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayName("Student Registration No")
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Id)
                    </div>

                </div>
            </div>
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Programs.ProgramName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Programs.ProgramName)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm-4">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.StudentName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.StudentName)
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-4">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.GuardianName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.GuardianName)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm-4">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Address)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Address)
                    </div>

                </div>
            </div>
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.ContactInfo)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.ContactInfo)
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayName("Student Status")
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Status)
                    </div>

                </div>
            </div>
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayName("Current Student Semester/Class")
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.CurrentSemclass)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.AddmissionDate)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.AddmissionDate)
                    </div>

                </div>
            </div>


        </div>
    </div>
    </div>
    <div class="form-group">
        <a class="btn btn-danger mt-10" href="@Url.Action("Index", "Students")">Back to List</a>
    </div>
