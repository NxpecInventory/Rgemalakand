@model RGECMS.Models.Finerecords

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Confirmation</h2>
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Are you sure you want to delete this Fine Records Slip No=@Html.DisplayFor(model => model.Id) Of This Student @Html.DisplayFor(model => model.Students.StudentName)?</strong>
</div>
<div class="container">
    <div class="form-horizontal">
        <h4>Finerecords</h4>
        <hr />


        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Students.StudentName)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Students.StudentName)
                    </div>
                </div>

            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Name)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.SemesterClass)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.SemesterClass)

                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.SubmissionDate)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.SubmissionDate)
                    </div>
                </div>

            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.FineAmount)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.FineAmount)
                    </div>
                </div>

            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.TotalAmount)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.TotalAmount)
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-4">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Payingstatus)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Payingstatus)
                    </div>
                </div>

            </div>

            <div class="form-group col-sm-4">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.Remarks)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Remarks)
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container">
        <div class="form-horizontal">
            <div class="form-group col-sm-4">
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </div>

        </div>
    </div>
    <div class="form-group">
        <a class="btn btn-danger mt-10" href="@Url.Action("Index", "Finerecords")">Back to List</a>
    </div>
}
       
