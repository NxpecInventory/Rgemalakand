@model PagedList.IPagedList<RGECMS.Models.Finerecords>
@using PagedList.Mvc;
<style>
    .pagination {
        /*display: inline-block;*/
    }

        .pagination a {
            color: black;
            padding: 8px 16px;
            text-decoration: none;
        }

            .pagination a.active {
                background-color: #4CbF50;
                color: white;
            }

            .pagination a:hover:not(.active) {
                background-color: dodgerblue;
            }
</style>

@{
    ViewBag.Title = "Index";
}


<h3 style="color:black;">Students Submitted Fine Records</h3>
<div class="alert alert-success">
    <b style="color:black">
        Generate Student College Fees Challan and print the generated Fees Challan Slip By Clicking Create New Link In Below.
    </b>
</div>
<div class="alert alert-success" role="alert">
    <h4 style="color:black;">Total Student Fine Record Found Are:- @TempData["Totaluser"]  </h4>
</div>
@using (Html.BeginForm("index", "Finerecords", FormMethod.Get))
{
    <p>
        <label style="color:black;">Student Registration No:</label>@Html.TextBox("search")
        <input type="submit" value="Search Student Fines" class="btn btn-success card-hover" />
    </p>


}
<p>
    @Html.ActionLink("Create New Fine", "Create")
</p>
<table class="table-bordered table-hover table-responsive" >
    <tr>
        <th>
            @Html.DisplayName("ChallanId")
        </th>
        <th>
            @Html.DisplayName("Student Name")
        </th>
        <th>
            @Html.DisplayName("RegNo")
        </th>

        <th>
            @Html.DisplayName("Current Semester/Class")
        </th>
        <th>
            @Html.DisplayName("Submission Date")
        </th>
        <th>
            @Html.DisplayName("Fine Amount")
        </th>
        <th>
            @Html.DisplayName("Total Fine Amount")
        </th>
        <th>
            @Html.DisplayName("Paying Status")
        </th>
        <th>
            @Html.DisplayName("Remarks")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SemesterClass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubmissionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FineAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payingstatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remarks)
        </td>
        @if (User.IsInRole("Administration"))
        {
            <td>
                @Html.ActionLink("Update", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })

                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
        }
    </tr>
}

</table>
<a style="color:black;">Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</a>


@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))