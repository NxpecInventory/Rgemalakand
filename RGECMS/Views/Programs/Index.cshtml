@model IEnumerable<RGECMS.Models.Programs>
<style>
    table#example.dataTable thead:hover {
        background-color: #8fa5c7;
    }

    table#example.dataTable tbody tr:hover {
        background-color: #b6b6b8;
    }

        table#example.dataTable tbody tr:hover > .sorting_1 {
            background-color: #b6b6b8;
        }
</style>
<script src="~/Scripts/jquery.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@{
    ViewBag.Title = "Index";
}

<div class="alert alert-primary" role="alert">
    <h4 style="color:black;">
        Rahman Group Of Education 4 Years Programs/ 2 Programs Pannel
    </h4>
</div>
<div class="alert alert-success" role="alert">
    <h5 style="color:black;">
        Here You Can Create the College Programs Of 4 Years 2 Years According to the Program Duration.
    </h5>
</div>

<div class="form-group">
    <a class="btn btn-primary mt-10" @Html.ActionLink("Add new", "Create")</a>
</div>
<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProgramStartingDate)
                </th>
                <th>Actions</th>
            </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProgramName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProgramStartingDate)
                    </td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit", "Programs", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                        <a class="btn btn-success" href="@Url.Action("Details", "Programs", new { id = item.Id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a> |
                        <a class="btn btn-danger" href="@Url.Action("Delete", "Programs", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a>

                    </td>
                </tr>
            }

    </table>
    </div>
    <link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" type="stylesheet" />
    <link href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" type="stylesheet" />
    @*.................Script side datatable searching and pagination...................*@
    @section scripts{
        <script src="//code.jquery.com/jquery-3.3.1.js"></script>

        <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

        <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

        <script>
            $(document).ready(function () {
                $('#example').DataTable()




            });

        </script>
    }
