@model  RGECMS.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}
<div class="alert alert-danger" role="alert">
    <h3 class="text-danger">Are you sure you want to delete this Rahman Group Of Education User?</h3>
</div>


<div class="container">
    <div class="form-horizontal">
        <h4 style="color:black;">Rahman Group Of Education User Deletion</h4>
        <hr />
        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    <div class=" font-weight-bold">
                        @Html.DisplayNameFor(model => model.Email)
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.Email)

                    </div>

                </div>
            </div>


            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    <div class=" font-weight-bold">
                        @Html.DisplayNameFor(model => model.RegistrationNo)
                        @Html.DisplayNameFor(model => model.Email)
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.RegistrationNo)

                    </div>

                </div>
            </div>
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    <div class=" font-weight-bold">
                        @Html.DisplayNameFor(model => model.UserName)
                    </div>
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.UserName)
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    <div class="container">
        <div class="form-horizontal">
            <div class="form-group col-sm-4">
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>

        </div>
    </div>
    <div class="form-group">
        <a class="btn btn-primary mt-10" href="@Url.Action("Index", "ApplicationUsers")">Back to List</a>
    </div>
}
   
