@model RGECMS.Models.Publicmessages

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Messages Confirmation</h2>

<h3>Are you sure you want to delete this Message?</h3>
<div class="container">
    <div class="form-horizontal">
        <h4>Messages</h4>
        <hr />
        <div class="row">
            <div class="form-group col-sm-4">
                <div class="control-label col-sm-4">
                    <div class=" font-weight-bold">
                        @Html.DisplayNameFor(model => model.Fullname)
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.Fullname)
                        </div>

                    </div>
                </div>

            <div class="form-group col-sm-4">
                <div class="control-label col-sm-4">
                    <div class=" font-weight-bold">
                        @Html.DisplayNameFor(model => model.Message)
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div class="form-control">
                          
                                @Html.DisplayFor(model => model.Message)
                             
                            </div>

                        </div>
                </div>

            <div class="form-group col-sm-4">
                <div class="control-label col-sm-4">
                    <div class=" font-weight-bold">
                        @Html.DisplayNameFor(model => model.MessageDate)
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div class="form-control">
                            @Html.DisplayFor(model => model.MessageDate)
                        </div>

                    </div>
                </div>

        </div>
    </div>
</div>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-horizontal">
            <div class="form-group col-sm-4">
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>

        </div>
    </div>
    <div class="form-group">
        <a class="btn btn-primary mt-10" href="@Url.Action("Index", "Publicmessages")">Back to List</a>
    </div>
}

