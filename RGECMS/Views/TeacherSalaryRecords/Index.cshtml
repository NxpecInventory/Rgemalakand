<div class="form-group">
    <a class="btn btn-primary mt-10" @Html.ActionLink("Creare new Salary Record", "Create")</a>
</div>
<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Challan No")
                </th>
                <th>
                    @Html.DisplayName("Teacher Name")
                </th>
                <th>
                    @Html.DisplayName("Teacher Id")
                </th>
                @*<th>
                        @Html.DisplayName("Father Name")
                    </th>*@
                <th>
                    @Html.DisplayName("Teacher Department")
                </th>
                <th>
                    @Html.DisplayName("Paying Date")
                </th>
                @*<th>
                        @Html.DisplayName("Paying Amount")
                    </th>*@
                <th>
                    @Html.DisplayName("Extra Classes Amounts")
                </th>
                @*<th>
                        @Html.DisplayName("Paying Method")
                    </th>*@

                <th>
                    @Html.DisplayName("Gross Total Amount")
                </th>
                <th>
                    @Html.DisplayName("Recieving Status")
                </th>

                <th>
                    @Html.DisplayName("Remarks")
                </th>
                <th>Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teachers.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teachers.Id)
                </td>

                @*<td>
                        @Html.DisplayFor(modelItem => item.FatherName)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherDepartment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubmissionDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.PayingAmount)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.OverTime)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.PaymentMethod)
                    </td>*@

                <td>
                    @Html.DisplayFor(modelItem => item.GrossTotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recievingstatus)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                @if (User.IsInRole("Administration"))
                {
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "TeacherSalaryRecords", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                    <a class="btn btn-success" href="@Url.Action("Details", "TeacherSalaryRecords", new { id = item.Id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a> |
                    <a class="btn btn-danger" href="@Url.Action("Delete", "TeacherSalaryRecords", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
                }
                else
                {
                <td>
                    <a class="btn btn-success" href="@Url.Action("Details", "TeacherSalaryRecords", new { id = item.Id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a> |
                </td>
                }
            </tr>
        }

    </table>
</div>
