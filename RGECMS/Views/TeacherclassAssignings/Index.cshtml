<div class="form-group">
    <a class="btn btn-primary mt-10" @Html.ActionLink("Assign New Courses", "Create")</a>
</div>
<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Program Name")
                </th>
                <th>
                    @Html.DisplayName("Teacher Reg No")
                </th>
                <th>
                    @Html.DisplayName("Teacher Name")
                </th>
                <th>
                    @Html.DisplayName("Asingning Date")
                </th>
                <th>
                    @Html.DisplayName("Class Name")
                </th>
                <th>
                    @Html.DisplayName("Subject/Course Name")
                </th>
                <th>Actions</th>
            </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProgramName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Teacherid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AssignedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubjectName)
                    </td>
                    @if (User.IsInRole("Administration"))
                    {
                        <td>

                            <a class="btn btn-success" href="@Url.Action("Details", "TeacherclassAssignings", new { id = item.id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a>
                            <a class="btn btn-danger" href="@Url.Action("Delete", "TeacherclassAssignings", new { id = item.id })"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a class="btn btn-success" href="@Url.Action("Details", "TeacherclassAssignings", new { id = item.id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a>
                        </td>
                    }
                </tr>
            }

    </table>
    </div>
