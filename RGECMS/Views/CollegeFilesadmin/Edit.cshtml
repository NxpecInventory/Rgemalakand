@model RGECMS.Models.CollegeFiles

@{
    ViewBag.Title = "Edit";
}

<div class="alert alert-danger" role="alert">
    <h4>Uploaded File Editing PannelNote:(You Are Only Allow To Edit The Uploaded File Descriptionand File Category Like Lecture Notes etc,You Can Not Edit The Uploaded File For Removing That Uploaded File You Should First Delete This Uploaded File Record And Upload The New File)</h4>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container">
    < class="form-horizontal">
    <h4>Uploaded File Record</h4>
    <hr />
    <div class="row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.uploderid)
        @Html.HiddenFor(model => model.UploadingDate)
        @Html.HiddenFor(model => model.filepath)
        @Html.HiddenFor(model => model.Uploadername)

        <div class="form-group col-sm-4">
            @Html.LabelFor(model => model.FileDescription, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FileDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FileDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-sm-4">
            @Html.LabelFor(model => model.FileCat, htmlAttributes: new { @class = "control-label col-sm-4" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FileCat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FileCat, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>



    <div class="row">
        <div class="form-group col-sm">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </div>
    </div>
    </div>
    
    }

<div class="form-group">
    <a class="btn btn-danger mt-10" href="@Url.Action("Index", "CollegeFiles")">Back to List</a>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
