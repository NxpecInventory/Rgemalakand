@model IEnumerable<RGECMS.Models.CollegeFiles>
<style>
    table#example.dataTable thead:hover {
        background-color: #8fa5c7;
    }

    table#example.dataTable tbody tr:hover {
        background-color: #b6b6b8;
    }

        table#example.dataTable tbody tr:hover > .sorting_1 {
            background-color: #b6b6b8;
        }
</style>
<script src="~/Scripts/jquery.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />


@{
    ViewBag.Title = "Index";
}

<div class="alert alert-info" role="alert">
    <h4>RGE College Administartion Uploaded Files List Including  Notifactions,Alerts And Examination Date Sheet Files</h4>
</div>

<div class="form-group">
    <a class="btn btn-primary mt-10" @Html.ActionLink("Add new", "Create")</a>
</div>
<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UploadingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FileDescription)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.FileCat)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Uploadername)
                </th>
                <th>Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr class="alert-success">
                <td>
                    @Html.DisplayFor(modelItem => item.UploadingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileCat)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Uploadername)
                </td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "CollegeFiles", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                    <a class="btn btn-danger" href="@Url.Action("Delete", "CollegeFiles", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a>
                    <a href="@item.filepath" class=" btn btn-success"><span class="glyphicon glyphicon-download"></span></a>
                </td>
            </tr>
        }

    </table>
</div>
