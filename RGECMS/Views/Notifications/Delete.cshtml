@model RGECMS.Models.Notification

@{
    ViewBag.Title = "Delete";
}

<div class="alert alert-danger" role="alert">
    <h3 style="color:black;">Are you sure you want to delete this Notification?</h3>
</div>
<div class="container">
    <div class="form-horizontal">
        <h4>Delete College Notification</h4>
        <hr />
        <div class="row">
            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.NotificationMessage)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.NotificationMessage)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.NotificationDate)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.NotificationDate)
                    </div>

                </div>
            </div>

            <div class="form-group col-sm">
                <div class="control-label col-sm">
                    @Html.DisplayNameFor(model => model.NotificationSpecific)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.NotificationSpecific)
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-4">
                <div class="control-label col-sm-5">
                    @Html.DisplayNameFor(model => model.NotificationAll)
                </div>

                <div class="col-md-10">
                    <div class="form-control">
                        @Html.DisplayFor(model => model.NotificationAll)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-horizontal">
            <div class="form-group col-sm-4">
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" />
                </div>
            </div>

        </div>
    </div>
    <div class="form-group">
        <a class="btn btn-danger mt-10" href="@Url.Action("Index", "Notifications")">Back to List</a>
    </div>
}
      
