@model IEnumerable<RGECMS.Models.ApplicationRole>

@{
    ViewBag.Title = "Index";
}
<style>
    table#example.dataTable thead:hover {
        background-color: #8fa5c7;
    }

    table#example.dataTable tbody tr:hover {
        background-color: #b6b6b8;
    }

        table#example.dataTable tbody tr:hover > .sorting_1 {
            background-color: #b6b6b8;
        }
</style>
<script src="~/Scripts/jquery.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<div class="alert alert-primary" role="alert">
    <h3 style="color:black;">
        Rahman Group Of Education College Application Roles Pannel
    </h3>
</div>
<div class="alert alert-info" role="alert">
    <p style="color:black;">
        Note:These roles are directly controlling all the application roles and access related operations these are the
        application module access in case of any attack or insecurity you can simply delete the module access for
        closing the working of any of the module or to close the fully acess of any module please do not delete any of the module acces
        after deleting that deleted module will close and for reopening of that module you need to contact the developer of this system.
    </p>
</div>

<div class="form-group">
    <a class="btn btn-primary mt-10" @Html.ActionLink("Create New", "Create")</a>
</div>
<table id="example" class="table table-striped table-bordered " style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                
                <a class="btn btn-warning" href="@Url.Action("Edit", "ApplicationRoles", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                <a class="btn btn-success" href="@Url.Action("Details", "ApplicationRoles", new { id = item.Id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a> |
                <a class="btn btn-danger" href="@Url.Action("Delete", "ApplicationRoles", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a>



            </td>
        </tr>
    }

</table>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" type="stylesheet" />
<link href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" type="stylesheet" />
