@model IEnumerable<RGECMS.Models.LibarayIssuedBooks>

@{
    ViewBag.Title = "Index";
}
<style>
    table#example.dataTable thead:hover {
        background-color: #8fa5c7;
    }

    table#example.dataTable tbody tr:hover {
        background-color: #b6b6b8;
    }

        table#example.dataTable tbody tr:hover > .sorting_1 {
            background-color: #b6b6b8;
        }
</style>
<script src="~/Scripts/jquery.min.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Issued Books Record</h2>


<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Book Title" )
            </th>
            <th>
                @Html.DisplayName("Book Id ")
            </th>
            <th>
                @Html.DisplayName("Assigned By ")
            </th>
            <th>
                @Html.DisplayName("Assigned Date ")
            </th>
            <th>
                @Html.DisplayName("Return Date ")
            </th>
            <th>
                @Html.DisplayName("Student RegId ")
            </th>
            <th>
                @Html.DisplayName("Student Name ")
            </th>
            <th>
                @Html.DisplayName("Student Department ")
            </th>
            <th>
                @Html.DisplayName("Student Class ")
            </th>

            <th>Actions</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudedRegId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentDepartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentClass)
            </td>

            <td>
                <a class="btn btn-primary" href="@Url.Action("Edit", "LibarayIssuedBooks", new { id = item.Id })"><span class="glyphicon glyphicon-book"></span></a> |
                <a class="btn btn-success" href="@Url.Action("Details", "LibarayIssuedBooks", new { id = item.Id })"><span class="glyphicon glyphicon-th-list"></span></a> |
                <a class="btn btn-danger" href="@Url.Action("Delete", "LibarayIssuedBooks", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }

</table>
<link href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" type="stylesheet" />
<link href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" type="stylesheet" />
@*.................Script side datatable searching and pagination...................*@
@section scripts{
    <script src="//code.jquery.com/jquery-3.3.1.js"></script>

    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable()




        });

    </script>
}
