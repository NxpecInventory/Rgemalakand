@model  PagedList.IPagedList<RGECMS.Models.AttendanceRecordsdata>
@using PagedList.Mvc;

<style>
    .pagination {
        /*display: inline-block;*/
    }

        .pagination a {
            color: black;
          
            padding: 8px 16px;
            text-decoration: none;
        }

            .pagination a.active {
                background-color: #4CbF50;
                color: white;
            }

            .pagination a:hover:not(.active) {
                background-color:crimson;
            }
</style>
@{
    ViewBag.Title = "Index";
}
<h2 style="color:black;">Rahman Group Of Education College Attendance Records</h2>
    @using (Html.BeginForm("index", "AttendanceRecordsPannel", FormMethod.Get))
    {
        <p>
           <label style="color:black;"> Student Registration No:</label>@Html.TextBox("search")
            <input type="submit" value="Search Student" class="btn btn-success card-hover" />
            </p>


            }

            <table class="table-bordered table-hover table-responsive">
                <tr>
                    <th>
                        @Html.DisplayName("Attendance Marking Date")
                    </th>
                    <th>
                        @Html.DisplayName("Student Registration No")
                    </th>
                    <th>
                        @Html.DisplayName("Student Name")
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.ClassId)
                    </th>*@
                    <th>
                        @Html.DisplayName("ClassName")
                    </th>

                    <th>
                        @Html.DisplayName("Attendance Status")
                    </th>
                    <th>
                        @Html.DisplayName("Remarks")
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.dataofattendance)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Studentid)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.ClassId)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Classname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Attendanceoptions.Options)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                        @if (User.IsInRole("Administration"))
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </td>
                        }
                        else
                        {
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
                            </td>
                        }
                    </tr>
                }

            </table>
<br />

    <a style="color:black;">Showing Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount</a>


  @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
