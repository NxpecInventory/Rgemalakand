<div style="width:100%; overflow:auto">
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Attendance Marking Date")
                </th>
                <th>
                    @Html.DisplayName("Student Registration No")
                </th>
                <th>
                    @Html.DisplayName("Student Name")
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.ClassId)
                    </th>*@
                <th>
                    @Html.DisplayName("ClassName")
                </th>

                <th>
                    @Html.DisplayName("Attendance Status")
                </th>
                <th>
                    @Html.DisplayName("Remarks")
                </th>
                <th>Actions</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dataofattendance)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Studentid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ClassId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Classname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Attendanceoptions.Options)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                @if (User.IsInRole("Administration"))
                {
                <td>
                    <a class="btn btn-warning" href="@Url.Action("Edit", "AttendanceRecordsdatas", new { id = item.Id })"><span class="glyphicon glyphicon-edit"></span></a>
                    <a class="btn btn-success" href="@Url.Action("Details", "AttendanceRecordsdatas", new { id = item.Id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a> |
                    <a class="btn btn-danger" href="@Url.Action("Delete", "AttendanceRecordsdatas", new { id = item.Id })"><span class="glyphicon glyphicon-trash"></span></a>

                </td>
                }
                else
                {
                    <td>
                        <a class="btn btn-success" href="@Url.Action("Details", "AttendanceRecordsdatas", new { id = item.Id })"><span class="glyphicon glyphicon glyphicon-th-list"></span></a>
                    </td>
                }
            </tr>
        }

    </table>
</div>


